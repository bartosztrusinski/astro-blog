---
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

import Layout from '@layouts/Layout.astro';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Layout title={`${entry.data.title} | AstroBlog`}>
  <main>
    <header>
      {
        entry.data.image && (
          <Image
            src={entry.data.image}
            alt={entry.data.title}
            transition:name="post-image"
            inferSize={true}
            loading="eager"
          />
        )
      }
      <h1 class="text-gradient" transition:name="post-heading">
        {entry.data.title}
      </h1>
      <time
        class="text-muted"
        datetime={entry.data.date.toISOString()}
        transition:name="post-date"
      >
        {entry.data.date.toDateString()}
      </time>
    </header>

    <section>
      <Content />
    </section>
  </main>
  <a href="/" aria-label="Go Back">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M9 15 3 9m0 0 6-6M3 9h12a6 6 0 0 1 0 12h-3"></path>
    </svg>
  </a>
</Layout>

<style>
  main {
    width: min(100% - 2rem, 70ch);
    margin-inline: auto;
    font-size: 1.2rem;
    line-height: 1.6;
    margin-block: 1rem 4rem;
  }

  header {
    margin-bottom: 2rem;
    padding: 0.5rem;
  }

  img {
    max-height: min(16vh, 16vw);
    width: 100%;
    object-fit: cover;
    border-radius: 0.5rem;
  }

  h1 {
    font-size: calc(1.5rem + 3vw);
    font-weight: 700;
    line-height: 1.1;
    text-wrap: balance;
  }

  section {
    display: flex;
    flex-direction: column;
    gap: 1.6rem;
    text-align: justify;
  }

  a {
    position: fixed;
    top: 2rem;
    left: max(50% - 26rem, 1rem);
    background-image: var(--gradient);
    color: rgba(var(--light), 0.9);
    text-decoration: none;
    padding: 0.4rem 0.8rem;
    border-radius: 0.4rem;

    @media (max-width: 880px) {
      bottom: 1rem;
      top: unset;
    }
  }

  svg {
    width: 1.4rem;
    stroke: currentColor;
    stroke-width: 2;
    fill: none;
  }
</style>

---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
const blogEntries = await getCollection('blog');
---

<Layout title="AstroBlog">
  <main>
    <h1>Astro<span class="text-gradient">BlogðŸš€</span></h1>
    <div class="description">
      Embark on a celestial journey with Astro Blog, where the cosmos comes
      alive through the art of words. Explore the wonders of the universe, from
      the mesmerizing dance of planets to the enigmatic beauty of distant
      galaxies
    </div>

    <ul class="list">
      {
        blogEntries.map((blogPost) => (
          <li class="post">
            <a href={`/posts/${blogPost.slug}`}>
              <h2 class="text-gradient">{blogPost.data.title}</h2>
              <time datetime={blogPost.data.date.toISOString()}>
                {blogPost.data.date.toDateString()}
              </time>
            </a>
          </li>
        ))
      }
    </ul>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: min(100% - 2rem, 60rem);
    font-size: 20px;
    line-height: 1.6;
  }
  h1 {
    font-size: calc(2rem + 3vw);
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-block: 1rem 0.8em;
  }
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
  .description {
    margin-bottom: 2rem;
    border: 1px solid rgba(var(--accent-light), 25%);
    background: linear-gradient(
      rgba(var(--accent-dark), 66%),
      rgba(var(--accent-dark), 33%)
    );
    padding: 1.5rem;
    border-radius: 8px;
    text-align: justify;
  }
  .description code {
    font-size: 0.8em;
    font-weight: bold;
    background: rgba(var(--accent-light), 12%);
    color: rgb(var(--accent-light));
    border-radius: 4px;
    padding: 0.3em 0.4em;
  }
  .description strong {
    color: rgb(var(--accent-light));
  }
  .list {
    list-style: none;
    padding: 0;
    display: flex;
    gap: 1rem;
    flex-direction: column;
    width: min(38.4rem, 100%);
    margin-inline: auto;
  }
  .post {
    display: flex;
    border: 1px solid rgba(var(--accent-light), 25%);
    border-radius: 0.5rem;
    transition: all 120ms ease-in-out;
  }
  .post a {
    text-decoration: none;
    flex-basis: 100%;
    color: inherit;
    line-height: 1.3;
    padding: 0.8rem 1.6rem 1.6rem 1.6rem;
  }
  .post:hover {
    background: rgba(var(--accent-light), 6%);
  }
  .post time {
    font-weight: 300;
    font-size: 0.8em;
  }
</style>

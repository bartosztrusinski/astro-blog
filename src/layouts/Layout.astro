---
import '@styles';
import { ClientRouter } from 'astro:transitions';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" transition:animate="slide">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ClientRouter />
    <script is:inline data-astro-rerun>
      preventThemeFlash();

      document.addEventListener('astro:page-load', () => {
        preventThemeFlash();
      });

      function preventThemeFlash() {
        const isDarkMode = localStorage.getItem('ab-dark-mode') === 'true';
        const theme = isDarkMode ? 'dark' : 'light';
        document.documentElement.dataset.theme = theme;
      }
    </script>
  </head>
  <body>
    <slot />

    <div></div>
    <div></div>
    <style>
      div {
        position: fixed;
        z-index: -10;
        border-radius: 50%;
        filter: blur(10vw);
      }

      div:first-of-type {
        left: 12%;
        top: 20%;
        width: 16vw;
        height: 16vw;
        background-color: rgba(119, 0, 255, 0.4);
      }

      div:nth-of-type(2) {
        left: 70%;
        top: 38%;
        width: 30vw;
        height: 24vw;
        background-color: rgba(0, 60, 255, 0.4);
      }
    </style>
  </body>
</html>
